services:
  ngrok:
    image: ngrok/ngrok:latest
    # Healthcheck does not work with the nix images anymore? Running any command simply returns:
    # openat etc/passwd: path escapes from parent
    command:
      - http
      - --domain=@NGROK_HOSTNAME@
      - monetr:4000
    environment:
      NGROK_AUTHTOKEN: "@NGROK_AUTH@"
