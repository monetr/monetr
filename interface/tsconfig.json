{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "src",
    "esModuleInterop": true,
    "jsx": "react",
    "module": "ESNEXT",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "outDir": "../server/ui/static",
    "sourceMap": true,
    "strict": false,
    "target": "ES2022",
    "paths": {
      "@monetr/interface/*": ["./*"]
    }
  },
  "include": [
    "types/bun.d.ts",
    "src/setupTests.ts",
    "src/**/*",
    "../tailwind.config.cjs",
    "../../tailwind.config.js"
  ],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}
