{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "src",
    "esModuleInterop": true,
    "jsx": "react",
    "module": "ESNEXT",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "allowImportingTsExtensions": true,
    "outDir": "../server/ui/static",
    "sourceMap": true,
    "strict": false,
    "target": "ES2022",
    "paths": {
      "@monetr/interface/*": ["./*"]
    }
  },
  "include": [
    "src/setupTests.ts",
    "src/**/*"
  ]
}
