{
  "compilerOptions": {
    "composite": true,
    "allowJs": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "jsx": "react",
    "module": "ESNEXT",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "outDir": "../server/ui/static",
    "sourceMap": true,
    "strict": false,
    "target": "ES2022",
    "declaration": true,
    "declarationDir": "../build/interface",
    "paths": {
      "@monetr/interface/*": ["./src/*"]
    }
  },
  "include": [
    "src/**/*",
    "tailwind.config.cjs"
  ],
  "exclude": ["node_modules"],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}
