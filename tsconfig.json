{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "ui",
    "esModuleInterop": true,
    "jsx": "react",
    "module": "ESNEXT",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "outDir": "output",
    "sourceMap": true,
    "strict": false,
    "target": "ES2022"
  },
  "include": [
    "../make.ts",
    "ui/**/*",
    "../tailwind.config.cjs"
  ],
  "exclude": [
    "pkg/ui/static"
  ],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}
