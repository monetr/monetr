{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "ui",
    "esModuleInterop": true,
    "jsx": "react",
    "module": "ES2022",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "outDir": "pkg/ui/static",
    "sourceMap": true,
    "strict": false,
    "target": "ES2022"
  },
  "include": [
    "ui/**/*",
    "../tailwind.config.js"
  ],
  "exclude": [
    "pkg/ui/static"
  ]
}
