{
  "extends": [
    "config:recommended",
    ":semanticCommitTypeAll(deps)"
  ],
  "semanticCommits": "enabled",
  "semanticCommitType": "deps",
  "semanticCommitScope": "Renovate",
  "branchConcurrentLimit": 20,
  "prConcurrentLimit": 20,
  "postUpdateOptions": [
    "gomodTidy"
  ],
  "packageRules": [
    {
      "matchPackageNames": [
        "github.com/aws/aws-sdk-go",
        "google.golang.org/genproto",
        "@types/.+"
      ],
      "extends": [
        "schedule:monthly"
      ]
    },
    {
      "matchCategories": [
        "go",
        "golang"
      ],
      "semanticCommitScope": "api"
    },
    {
      "matchCategories": [
        "js",
        "javascript",
        "typescript"
      ],
      "semanticCommitScope": "ui"
    },
    {
      "matchCategories": [
        "docker",
        "dockerfile"
      ],
      "semanticCommitScope": "containers"
    },
    {
      "groupName": "rsbuild",
      "groupSlug": "rsbuild",
      "matchPackageNames": [
        "/rspack/",
        "/rsbuild/"
      ]
    },
    {
      "groupName": "sass",
      "groupSlug": "sass",
      "matchPackageNames": [
        "/sass/"
      ]
    }
  ],
  "docker": {
    "fileMatch": [
      "compose/.+\\.yaml.in$",
      "docker-compose.yaml",
      "Dockerfile"
    ]
  },
}
