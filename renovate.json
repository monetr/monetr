{
  "extends": [
    "config:recommended",
    ":semanticCommitTypeAll(deps)"
  ],
  "semanticCommits": "enabled",
  "semanticCommitType": "deps",
  "semanticCommitScope": "Renovate",
  "branchConcurrentLimit": 20,
  "prConcurrentLimit": 20,
  "postUpdateOptions": [
    "gomodTidy"
  ],
  "packageRules": [
    {
      "matchPackageNames": [
        "github.com/aws/aws-sdk-go",
        "google.golang.org/genproto",
        "@types/.+",
        "renovate"
      ],
      "extends": [
        "schedule:monthly"
      ]
    },
    {
      "matchCategories": [
        "go",
        "golang"
      ],
      "semanticCommitScope": "api"
    },
    {
      "matchCategories": [
        "js",
        "javascript",
        "typescript"
      ],
      "semanticCommitScope": "ui"
    },
    {
      "matchCategories": [
        "docker",
        "dockerfile"
      ],
      "semanticCommitScope": "containers"
    },
    {
      "groupName": "rsbuild",
      "groupSlug": "rsbuild",
      "matchPackageNames": [
        "/rspack/",
        "/rsbuild/"
      ]
    },
    {
      "groupName": "golang",
      "groupSlug": "golang",
      "matchPackageNames": [
        "^go$"
      ]
    },
    {
      "groupName": "sass",
      "groupSlug": "sass",
      "matchPackageNames": [
        "/sass/"
      ]
    }
  ],
  "dockerfile": {
    "fileMatch": [
      "Dockerfile"
    ]
  },
  "docker-compose": {
    "fileMatch": [
      "compose/.+\\.yaml.in$",
      "docker-compose.yaml"
    ]
  },
  "customManagers": [
    {
      "customType": "regex",
      "description": "Update Golang min version in CMake",
      "fileMatch": ["CMakeLists.txt", ".+\\.cmake"],
      "matchStrings": ["set\\(GO_MIN_VERSION \"(?<currentValue>.*?)\"\\)"],
      "depNameTemplate": "go",
      "datasourceTemplate": "golang-version"
    },
    {
      "customType": "regex",
      "description": "Update Golang min version in docs",
      "fileMatch": [".+\\.mdx"],
      "matchStrings": ["[Gg]o.*?(?<currentValue>\\d+\\.\\d+\\.\\d+)"],
      "depNameTemplate": "go",
      "datasourceTemplate": "golang-version"
    },
    {
      "customType": "regex",
      "description": "Update Node min version in CMake",
      "fileMatch": ["CMakeLists.txt", ".+\\.cmake"],
      "matchStrings": ["set\\(NODE_MIN_VERSION \"(?<currentValue>\\d+\\.\\d+\\.\\d+)\"\\)"],
      "depNameTemplate": "node",
      "datasourceTemplate": "node-version"
    },
    {
      "customType": "regex",
      "description": "Update Node min version in docs",
      "fileMatch": [".+\\.mdx"],
      "matchStrings": ["[Nn]ode.*?(?<currentValue>\\d+\\.\\d+\\.\\d+)"],
      "depNameTemplate": "node",
      "datasourceTemplate": "node-version"
    },
    {
      "customType": "regex",
      "description": "Update CLDR version in CMake",
      "fileMatch": ["CMakeLists.txt"],
      "matchStrings": ["GIT_REPOSITORY .+cldr-json.+\n.+GIT_TAG (?<currentValue>.*?)\n"],
      "depNameTemplate": "cldr-json",
      "packageNameTemplate": "https://github.com/unicode-org/cldr-json.git",
      "datasourceTemplate": "git-refs"
    },
    {
      "customType": "regex",
      "description": "Update simple-icons version in CMake",
      "fileMatch": ["CMakeLists.txt"],
      "matchStrings": ["GIT_REPOSITORY .+simple-icons.+\n.+GIT_TAG (?<currentValue>.*?)\n"],
      "depNameTemplate": "simple-icons",
      "packageNameTemplate": "https://github.com/simple-icons/simple-icons.git",
      "datasourceTemplate": "git-refs"
    }
  ]
}
