{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "src",
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "module": "ESNEXT",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "allowImportingTsExtensions": true,
    "sourceMap": true,
    "strict": false,
    "target": "ES2022",
    "paths": {
      "@monetr/interface/*": ["../../interface/src/*"]
    }
  },
  "include": ["*"]
}
